<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context="com.example.lanyetc.campusgo.ui.activity.LoginActivity">

    <EditText
        android:id="@+id/login_uername"
        android:layout_width="225dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="160dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        android:layout_marginTop="360dp"
        android:fontFamily="monospace"
        android:hint="请输入您的用户名"
        android:maxLines="1"
        android:selectAllOnFocus="false"
        android:singleLine="true"
        android:textColor="@color/colorTextInput"
        android:textColorHint="@color/colorTextHint"
        android:textSize="18sp"
        android:theme="@style/loginEditTextStyle"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/login_password"
        android:layout_width="225dp"
        android:layout_height="44dp"
        android:layout_marginBottom="130dp"
        android:layout_marginEnd="80dp"
        android:layout_marginStart="80dp"
        android:ems="10"
        android:fontFamily="monospace"
        android:hint="请输入您的密码"
        android:inputType="textPassword"
        android:singleLine="true"
        android:textColor="@color/colorTextInput"
        android:textColorHint="@color/colorTextHint"
        android:textSize="18sp"
        android:theme="@style/loginEditTextStyle"
        android:typeface="normal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_uername" />

    <ImageButton
        android:id="@+id/login_btn"
        android:layout_width="151dp"
        android:layout_height="46dp"
        android:layout_marginBottom="76dp"
        android:layout_marginEnd="130dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="11dp"
        android:adjustViewBounds="true"
        android:background="@drawable/loginbtn_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_password" />

    <ImageButton
        android:id="@+id/login_sign_btn"
        android:layout_width="98dp"
        android:layout_height="16dp"
        android:layout_marginBottom="60dp"
        android:layout_marginEnd="156dp"
        android:layout_marginStart="156dp"
        android:background="@drawable/login_signbt_bg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/login_btn" />

</android.support.constraint.ConstraintLayout>
